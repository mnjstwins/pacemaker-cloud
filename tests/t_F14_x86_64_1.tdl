<template>
  <name>F14_x86_64_1</name>
  <os>
    <name>Fedora</name>
    <version>14</version>
    <arch>x86_64</arch>
    <install type='iso'>
      <iso>file:/var/lib/libvirt/images/Fedora-14-x86_64-DVD.iso</iso>
    </install>
    <rootpw>password</rootpw>
  </os>
  <description>Fedora 14</description>
  <commands>
    <command name='empty-root-pass'>
passwd -d root
    </command>
    <command name='login-less-ssh'>
echo "PermitEmptyPasswords yes" >> /etc/ssh/sshd_config.icicle
    </command>
  </commands>
  <packages>
    <package name="httpd">
      <file>httpd</file>
    </package>
  </packages>
</template>
